spike_main_subproject_deps = \
	fdt \
	fesvr \
	softfloat \
	softfloat_8 \
	disasm \
	riscv \

spike_main_install_prog_srcs = \
	spike.cc \
	spike-log-parser.cc \
	xspike.cc \
	termios-xspike.cc \

spike_main_install_shared_lib = yes

spike_main_srcs = \
        spike.cc \
        spike_dpi.cc
spike_main_CFLAGS = -fPIC -I/usr/share/verilator/include -I/usr/share/verilator/include/vltstd

# This hack adds all symbols from extension.o to spike's dynamic symbol
# table, which is required for dynamically loaded --extension libraries
spike_main_LDFLAGS = extension.o
